@page "/"

<PageTitle>Battleship - Naval Combat Game</PageTitle>

<div class="landing-container">
    <!-- Animated background particles -->
    <div class="particles-bg">
        @for (int i = 0; i < 50; i++)
        {
            <div class="particle" style="--delay: @(i * 0.1)s; --duration: @(Random.Shared.Next(3, 8))s;"></div>
        }
    </div>

    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-content">
            <h1 class="game-title">
                <span class="title-line">BATTLE</span>
                <span class="title-line">SHIP</span>
            </h1>
            
            <p class="game-tagline">
                Command your fleet. Sink the enemy. Rule the seas.
            </p>
            
            <div class="cta-buttons">
                <NavLink href="/ship-placement" class="btn btn-primary pulse-animation" draggable="false">
                    <i class="icon-play"></i>
                    Play Now
                </NavLink>
                
                <button class="btn btn-secondary" @onclick="ShowInstructions">
                    <i class="icon-info"></i>
                    How to Play
                </button>
            </div>
        </div>
    </div>

    <!-- Instructions Modal -->
    @if (showInstructions)
    {
        <div class="modal-overlay" @onclick="HideInstructions">
            <div class="modal-content" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h3>How to Play Battleship</h3>
                    <button class="close-btn" @onclick="HideInstructions">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="instruction-step">
                        <div class="step-number">1</div>
                        <div class="step-content">
                            <h4>Fleet Deployment</h4>
                            <p>Place your ships on the grid horizontally or vertically, spreading them out to avoid easy hits—or just select “Auto Place” to get right into the action!.</p>
                        </div>
                    </div>
                    <div class="instruction-step">
                        <div class="step-number">2</div>
                        <div class="step-content">
                            <h4>Launch Attack</h4>
                            <p>Take turns randomly selecting  grid coordinates to try and hit your opponent’s ships. Hits and misses are marked on the board—sink all their ships to win!</p>
                        </div>
                    </div>
                    <div class="instruction-step">
                        <div class="step-number">3</div>
                        <div class="step-content">
                            <h4>Achieve Victory</h4>
                            <p>Achieve victory by being the first to sink all five of your opponent’s ships before they sink yours.</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <NavLink href="/ship-placement" class="btn btn-primary" draggable="false">
                        Start Playing
                    </NavLink>
                </div>
            </div>
        </div>
    }

    <!-- Footer -->
    <footer class="landing-footer">
        <div class="footer-content">
            <p>&copy; 2025 Battleship Game. Built with Blazor by Fred Johnson and Matthew Hill</p>
            <div class="footer-links">
                <a href="#" class="footer-link">About</a>
                <a href="#" class="footer-link">Contact</a>
                <a href="#" class="footer-link">Privacy</a>
            </div>
        </div>
    </footer>
</div>

@code {
    private bool showInstructions = false;

    private void ShowInstructions()
    {
        showInstructions = true;
    }

    private void HideInstructions()
    {
        showInstructions = false;
    }
}
